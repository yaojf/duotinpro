extends layout
block content
    div(class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main")
        ul.breadcrumb
            li
                a(href="/")
                    i.glyphicon.glyphicon-home
                span.divider
            li
                a(href="/static/properties") 静态文件管理
            li.active 文件详情
        div
            form(method="post" action="/static/properties/detail/"+fileId+"/save" class="form-inline")
                div(class="form-group" style="padding-right: 10px")
                    label 属性名:
                    input(type="text" value="" name="key" id="key" class="form-control" placeholder="key")
                div(class="form-group" style="padding-right: 10px")
                    label 属性值:
                    textarea(rows="3" cols="30" name="value" id="value")
                input(type="submit" class="btn btn-default save" value="保存")
        br
        div.panel.panel-default
            div.panel-body
                table.table
                    thead
                        tr
                            td key
                            td value
                            td 创建时间
                            td 修改时间
                            td 操作
                    tbody
                        each item in items
                            tr
                                td= item.name
                                td= item.value
                                td= item.created_at.format("yyyy-MM-dd HH:mm:ss")
                                td= item.updated_at.format("yyyy-MM-dd HH:mm:ss")
                                td
                                    a(href="/static/properties/detail/"+item.file_id + "/update/" + item.id)
                                        button.btn.btn-info 修改
                                    a(href="/static/properties/detail/"+item.file_id + "/delete/" + item.id, class="delete")
                                        button.btn.btn-danger 删除

    script(src="/javascripts/pages/pro_detail.js" type="text/javascript")
    script(src="/javascripts/pages/static_properties.js" type="text/javascript")